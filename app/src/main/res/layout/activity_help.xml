<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/back_edittext_location">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_helpcenter"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_helpcenter"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/back_pink_button"
                android:layout_marginTop="5dp"
                android:text="Help Center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/back_edittext_location">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_emergency"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_emergency"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/back_black_layout"
                android:layout_marginTop="5dp"
                android:text="It is an emergency"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/back_edittext_location">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_ride_his"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Driver"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/back_blue_button"
                android:layout_marginTop="5dp"
                android:text="Become Driver"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/back_edittext_location">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_pay_his"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_phone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/back_black_layout"
                android:layout_marginTop="5dp"
                android:text="Terms and conditions"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>